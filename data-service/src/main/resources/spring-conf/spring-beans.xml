<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	default-autowire="byName">
	
	<bean id="buildingCache" class="org.data.cache.BuildingCache" init-method="init"></bean>
	<bean id="elkDataService" class="org.data.service.impl.ElkDataServiceImpl" init-method="init" destroy-method="release">
		<property name="host" value="${elastic.search.host}"></property>
		<property name="port" value="${elastic.search.port}"></property>
		<property name="scheme" value="${elastic.search.scheme}"></property>
	</bean>
</beans>